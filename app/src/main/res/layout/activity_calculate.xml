<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg"
    tools:context="com.example.parkour.ca.CalculateActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="381dp"
        android:layout_height="72dp"
        android:gravity="right"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/et_down"
        app:layout_constraintVertical_bias="0.0" />



    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="372dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <Button
                android:id="@+id/btn_c"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="C"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_sin"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="sin"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_cos"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="cos"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="back"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_l"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="("
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_r"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text=")"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_p"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="^"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_chu"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="/"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="7"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_cheng"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="x"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="5"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_jian"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="-"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="1"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="3"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_jia"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="+"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="."
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_log"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="log"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="98dp"
                android:layout_height="62dp"
                android:text="="
                android:textSize="30dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/et_down"
        android:layout_width="285dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        android:gravity="right"
        android:textSize="40sp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        tools:layout_editor_absoluteX="99dp" />

    <Button
        android:id="@+id/btn_trans"
        android:layout_width="73dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="进制转换"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/et_down"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@+id/et_down"
        app:layout_constraintHorizontal_bias="0.0" />




</android.support.constraint.ConstraintLayout>
